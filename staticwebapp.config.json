{
  "auth": {
    "identityProviders": {
      "github": {}
    }
  },
  "routes": [
    {
      "route": "/admin/*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200,
      "allowedRoles": ["anonymous", "authenticated"]
    }
  ],
  "responseOverrides": {
        "404": {
            "rewrite": "/404.html",
            "statusCode": 404
        }
  },
  "platform": {
    "apiRuntime": "dotnet-isolated:9.0"
  }
}

