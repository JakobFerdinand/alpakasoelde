---
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  className?: string;
}

const { title, description, image, className = "" } = Astro.props;
---

<section class={`hero ${className}`} style={`--hero-bg-image: url(${image.src})`}>
  <div class="hero-content">
    <h1>{title}</h1>
    <p>{description}</p>
    <slot />
  </div>
</section>

<style>
  .hero {
    margin-top: calc(-1 * var(--nav-height, 80px));
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 32rem;
    background-image: linear-gradient(
        rgba(0, 0, 0, 0.35),
        rgba(0, 0, 0, 0.35)
      ),
      var(--hero-bg-image);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    color: var(--schurwolle);
    padding: calc(5rem + var(--nav-height, 80px)) 1rem 5rem;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    max-width: 720px;
  }

  .hero h1 {
    margin: 0;
    font-size: 2rem;
  }

  .hero p {
    font-size: 1.125rem;
    margin: 0;
  }

  @media (min-width: 768px) {
    .hero {
      min-height: 37rem;
    }

    .hero h1 {
      font-size: 2.75rem;
    }

    .hero p {
      font-size: 1.25rem;
    }
  }
</style>
