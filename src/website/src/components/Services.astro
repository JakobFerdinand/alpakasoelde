</section>

<style>
  .services {
    background-color: var(--taubenblau);
    color: var(--schurwolle);
  }

  .services-grid {
    display: grid;
    gap: 2rem;
  }

  .service-item {
    display: block;
    position: relative;
    padding: 1.5rem 2rem 1.5rem 1rem;
    text-align: center;
    color: var(--schurwolle);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.2s, color 0.2s, opacity 0.5s ease-in;
    opacity: 1;
  }

  .service-item.motion-ready {
    opacity: 0;
  }

  .service-item.show {
    opacity: 1;
  }

  .service-item::after {
    content: '→';
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    transition: transform 0.2s;
  }

  .service-item:hover {
    background-color: var(--bluetenhonig);
    color: var(--schurwolle);
  }

  .service-item:hover::after {
    transform: translateY(-50%) translateX(0.25rem);
  }

  .service-item:focus-visible {
    outline: 2px solid var(--bluetenhonig);
    outline-offset: 4px;
    background-color: var(--bluetenhonig);
    color: var(--schurwolle);
  }

  .service-item:focus-visible::after {
    transform: translateY(-50%) translateX(0.25rem);
  }

  .service-item h3 {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<script>
  const services = document.querySelectorAll('.service-item');
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  if (!prefersReducedMotion && 'IntersectionObserver' in window) {
    services.forEach((el) => el.classList.add('motion-ready'));

    const observer = new IntersectionObserver((entries, obs) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('show');
          obs.unobserve(entry.target);
        }
      });
    });

    services.forEach((section) => observer.observe(section));
  } else {
    services.forEach((el) => el.classList.add('show'));
  }
</script>
