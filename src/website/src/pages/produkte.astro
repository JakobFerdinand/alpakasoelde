---
import ImpressionBreak from "../components/ImpressionBreak.astro";
import Layout from '../layouts/Layout.astro';
import ServiceHero from "../components/ServiceHero.astro";
import Slideshow from "../components/Slideshow.astro";

import heroImage from "../images/impressions/impression_7.jpg";

import Strickgabel from "../images/produkte/Strickgabel.jpeg";
import Zauberwolle from "../images/produkte/Zauberwolle.jpg";
import WolleAmadeus from "../images/produkte/Wolle_Amadeus.jpg";
import Karten from "../images/produkte/Karten.jpg";
import Polster from "../images/produkte/Polster.jpg";
import Wollpellets from "../images/produkte/Wollpellets.jpg";

const images = [Strickgabel, Zauberwolle, WolleAmadeus, Karten, Polster, Wollpellets];
---

<Layout title="Produkte" navTransparentOnHero={true} hideLogoOnTransparent={false}>
  <ServiceHero
    title="Produkte"
    description="Entdecke die vielfältigen Produkte aus der weichen Alpakawolle in unserem Hofladen."
    image={heroImage}
    className="service-hero"
  />

  <section class="service-page section">
    <div class="container">
      <h2>Produkte</h2>
      <p>Tauche ein in die kuschelweiche Welt der Alpakas: In unserem Hofladen findest du handgesponnene Wolle, liebevoll gefertigte Accessoires und viele weitere Kostbarkeiten.</p>
      <p>Ob herrlich weiche Pölster mit Alpakafüllung, Zauberwolle samt Strickgabel oder naturreine Wollpellets als Dünger – hier entdeckst du, wie vielseitig Alpaka sein kann. Ein Blick in unseren Schaukasten lohnt sich immer.</p>
      <p>Auf Vorbestellung können wir dir auch gerne eine persönliche Decke aus feinster Alpakafaser anbieten.</p>
    </div>
  </section>
  <section class="section">
    <Slideshow images={images} />
  </section>
</Layout>

<style>
  .service-page {
    background-color: var(--auwasser);
    color: var(--taubenblau);
  }
</style>
