---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Alpakas from '../components/Alpakas.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import ImpressionBreak from '../components/ImpressionBreak.astro';
import Impression1 from '../images/impressions/impression_1.jpg';
import Impression117 from '../images/impressions/impression_117.jpg';
import Impression54 from '../images/impressions/impression_54.jpg';
---

<Layout title="Willkommen" navTransparentOnHero={true} hideLogoOnTransparent={true}>
  <Hero />
  <Services />
  <Alpakas />
  <ImpressionBreak
    image={Impression54}
    alt="Katze Rosi kurz vorm Sprung"
    backgroundPosition="center 90%"
  />
  <About />
  <ImpressionBreak
    image={Impression117}
    alt="Alpaka Stall im Abendlicht"
    backgroundPosition="center 35%"
  />
  <Contact />
  <ImpressionBreak
    image={Impression1}
    alt="Huhn Whitney"
    backgroundPosition="center 40%"
  />
</Layout>
