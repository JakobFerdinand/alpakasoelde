---
import Layout from "../layouts/Layout.astro";
import Slideshow from "../components/Slideshow.astro";

import Wanderung1 from "../images/wanderungen/wanderung1.jpg";
import Wanderung2 from "../images/wanderungen/wanderung2.jpg";
import Wanderung3 from "../images/wanderungen/wanderung3.jpg";
import Wanderung4 from "../images/wanderungen/wanderung4.jpg";

const images = [Wanderung1, Wanderung2, Wanderung3, Wanderung4];
---

<Layout title="Alpaka-Wanderungen">
  <section class="service-page section">
    <div class="container">
      <h2>Alpaka-Wanderungen</h2>
      <p>
        Entdecke bei einer Wanderung durch die Inn Auen die Natur an der Seite
        unserer freundlichen Alpakas. Ein Hofbesuch mit Kennenlernen der Tiere
        ist inklusive.
      </p>
    </div>
  </section>

  <Slideshow images={images} />

  <section class="details section">
    <div class="container">
      <h3>Details</h3>
      <p>
        Bei einer gemütlichen Runde über unsere Felder lernst du die Tiere
        kennen und kannst die Landschaft genießen.
      </p>
      <ul class="details-list">
        <li><strong>Preis:</strong> 30&nbsp;€ pro Person</li>
        <li><strong>Dauer:</strong> ca. 2&nbsp;Stunden</li>
        <li><strong>Hinweis:</strong> Hunde können leider nicht mitwandern</li>
        <li>
          <strong>Begleitung:</strong> Bei Kindern unter 14 Jahren ist pro Alpaka
          eine Begleitperson notwendig
        </li>
      </ul>
      <div style="text-align: center; margin-top: 3rem;">
        <a href="/#kontakt" class="btn">Jetzt Alpaka-Tour buchen</a>
      </div>
    </div>
  </section>

  <section class="info-box section">
    <div class="container">
      <h3>Ausflugstipps</h3>
      <p>
        Für eine Stärkung nach der Wanderung empfiehlt sich die
        <a
          href="https://www.burg-frauenstein.com/"
          class="link"
          target="_blank"
          rel="noopener noreferrer">Burgschänke Frauenstein</a
        >
        mit regionaler Küche und gemütlichem Gastgarten.
      </p>
      <p>
        Ganz in der Nähe liegt das
        <a
          href="https://www.naturium-ering.at"
          class="link"
          target="_blank"
          rel="noopener noreferrer">Naturium Ering</a
        >. Dort erhältst du spannende Einblicke in die Vogelwelt des
        Europareservats Unterer Inn und kannst von Aussichtstürmen seltene Arten
        beobachten.
      </p>
    </div>
  </section>
</Layout>

<style>
  .service-page {
    background-color: var(--auwasser);
    color: var(--taubenblau);
  }

  .details-list {
    list-style: none;
    padding: 0;
  }

  .details-list li {
    margin-bottom: 0.5rem;
  }

  .info-box {
    background-color: var(--himmelblau);
    color: var(--schurwolle);
    text-align: center;
  }
</style>
