---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Head from '../components/Head.astro';
import '@fontsource/bricolage-grotesque/300.css';
import '@fontsource/bricolage-grotesque/400.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <Head title={title} />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Zum Inhalt springen</a>
    <Navbar />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>

<script is:inline>
  const navbar = document.querySelector('.navbar');
  const navLogo = navbar?.querySelector('.logo');
  const heroSection = document.querySelector('.hero');
  const navHeight = navbar?.offsetHeight ?? 80;
  const rootMargin = `-${navHeight}px 0px 0px 0px`;

  const setTransparentNav = () => {
    navbar?.classList.add('is-transparent');
    navLogo?.classList.remove('show');
  };

  const setSolidNav = () => {
    navbar?.classList.remove('is-transparent');
    navLogo?.classList.add('show');
  };

  if (navbar && navLogo && heroSection) {
    const observer = new IntersectionObserver(
      ([entry]) => {
        if (entry.isIntersecting) {
          setTransparentNav();
        } else {
          setSolidNav();
        }
      },
      { threshold: 0, rootMargin },
    );

    observer.observe(heroSection);

    const rect = heroSection.getBoundingClientRect();
    const heroVisible = rect.bottom > navHeight && rect.top < window.innerHeight;
    heroVisible ? setTransparentNav() : setSolidNav();
  } else if (navbar && navLogo) {
    setSolidNav();
  }
</script>
