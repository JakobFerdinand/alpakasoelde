---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Head from '../components/Head.astro';
import '@fontsource/bricolage-grotesque/300.css';
import '@fontsource/bricolage-grotesque/400.css';

interface Props {
  title: string;
  navTransparentOnHero?: boolean;
  hideLogoOnTransparent?: boolean;
}

const { title, navTransparentOnHero = false, hideLogoOnTransparent = false } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <Head title={title} />
  </head>
<body
  data-nav-transparent={navTransparentOnHero}
  data-nav-hide-logo={hideLogoOnTransparent}
>
  <a href="#main-content" class="skip-link">Zum Inhalt springen</a>
  <Navbar initialTransparent={navTransparentOnHero} hideLogo={hideLogoOnTransparent} />
  <main id="main-content">
    <slot />
  </main>
  <Footer />
</body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }

  main {
    padding-top: var(--nav-height);
  }
</style>

<script is:inline>
  const navbar = document.querySelector('.navbar');
  const heroSection = document.querySelector('.hero');
  const allowTransparent = document.body.dataset.navTransparent === 'true';
  const hideLogoTransparent = document.body.dataset.navHideLogo === 'true';
  const navHeight = navbar?.offsetHeight ?? 80;
  const rootMargin = `-${navHeight}px 0px 0px 0px`;

  if (navbar) {
    navbar.classList.toggle('nav-hide-logo', hideLogoTransparent);
  }

  const setTransparentNav = () => {
    navbar?.classList.add('is-transparent');
  };

  const setSolidNav = () => {
    navbar?.classList.remove('is-transparent');
  };

  if (navbar && heroSection && allowTransparent) {
    const observer = new IntersectionObserver(
      ([entry]) => {
        if (entry.isIntersecting) {
          setTransparentNav();
        } else {
          setSolidNav();
        }
      },
      { threshold: 0, rootMargin },
    );

    observer.observe(heroSection);

    const rect = heroSection.getBoundingClientRect();
    const heroVisible = rect.bottom > navHeight && rect.top < window.innerHeight;
    heroVisible ? setTransparentNav() : setSolidNav();
  } else if (navbar) {
    setSolidNav();
  }
</script>
