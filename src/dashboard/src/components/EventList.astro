---
import { CircleEllipsis, Scissors, Stethoscope, Syringe, Worm } from 'lucide-astro';

export interface Props {
  id: string;
  loadingText?: string;
  emptyText?: string;
}

const { id, loadingText = 'Lade Ereignisse...', emptyText = 'Keine Ereignisse vorhanden.' } = Astro.props;
---
<div id={id} class="events-content loading" data-empty-text={emptyText}>
  <p class="loading-text">{loadingText}</p>
</div>

<div id="event-icon-templates" aria-hidden="true">
  <div data-icon="worm">
    <Worm class="event-icon" />
  </div>
  <div data-icon="scissors">
    <Scissors class="event-icon" />
  </div>
  <div data-icon="syringe">
    <Syringe class="event-icon" />
  </div>
  <div data-icon="stethoscope">
    <Stethoscope class="event-icon" />
  </div>
  <div data-icon="circle-ellipsis">
    <CircleEllipsis class="event-icon" />
  </div>
</div>

<style>
  .events-content {
    background-color: #fff;
    border-radius: 0.75rem;
    padding: 1.25rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    min-height: 120px;
  }

  .event-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-item {
    border-bottom: 1px solid rgba(0, 32, 73, 0.08);
    padding-bottom: 1rem;
  }

  .event-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .event-header {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    align-items: baseline;
    margin-bottom: 0.35rem;
  }

  .event-title {
    font-weight: 700;
    color: var(--taubenblau);
  }

  .event-title-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .event-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--taubenblau);
    flex-shrink: 0;
  }

  .event-date {
    color: var(--sahlchen);
    font-weight: 600;
    white-space: nowrap;
  }

  .alpaka-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0.35rem 0;
  }

  .alpaka-chip {
    background-color: var(--himmelblau);
    color: var(--schurwolle);
    padding: 0.25rem 0.6rem;
    border-radius: 999px;
    font-size: 0.9rem;
  }

  .event-comment {
    margin: 0.35rem 0 0;
    color: var(--taubenblau);
  }

  .event-cost {
    margin: 0.35rem 0 0;
    font-weight: 600;
    color: var(--weidegruen);
  }

  .loading-text,
  .error,
  .empty {
    margin: 0;
  }

  .error {
    color: #b00020;
  }

  #event-icon-templates {
    display: none;
  }

  @media (max-width: 768px) {
    .event-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .event-date {
      white-space: normal;
    }
  }
</style>
