<section class="dashboard-events section">
  <div class="container">
    <div class="events-header">
      <div>
        <p class="eyebrow">Überblick</p>
        <h2>Letzte Ereignisse</h2>
        <p class="events-subtitle">Alle Ereignisse der Herde in chronologischer Reihenfolge.</p>
      </div>
      <div class="events-legend" aria-hidden="true">
        <span class="legend-dot legend-dot--health"></span>
        <p>Gesundheit</p>
        <span class="legend-dot legend-dot--care"></span>
        <p>Pflege</p>
        <span class="legend-dot legend-dot--logistics"></span>
        <p>Organisation</p>
      </div>
    </div>
    <div id="events-content" class="events-content loading">
      <p class="loading-text">Lade Ereignisse...</p>
    </div>
  </div>
</section>

<script>
  const eventsContainer = document.getElementById('events-content');

  const iconLibrary = {
    stethoscope:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 4v4m0 0-2.5-2.5M12 8l2.5-2.5"/><path d="M10 11v1a5 5 0 0 1-10 0V3"/><path d="m3 5 6 2"/><path d="m3 3 6 2"/><path d="M18 3v11"/><path d="M21 10a3 3 0 0 1-6 0"/><path d="M19 16v2a4 4 0 0 1-8 0v-3a5 5 0 0 0 5-5"/></svg>',
    syringe:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m18 2 4 4"/><path d="m17 7 3-3"/><path d="M3 22l6-6"/><path d="M12 3l9 9"/><path d="m6 11 9 9"/><path d="m21 16-6 6"/><path d="m3 10 7-7"/><path d="m2 11 3 3"/><path d="m10 2 3 3"/><path d="m5 10 9 9"/></svg>',
    heartPulse:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 21S4 13 4 8a4 4 0 0 1 4-4c1.5 0 3 .75 4 2 1-1.25 2.5-2 4-2a4 4 0 0 1 4 4c0 5-8 13-8 13"/><path d="M9 12h1l1-2 1 4 1-2h1"/></svg>',
    scissors:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="6" cy="6" r="3"/><circle cx="6" cy="18" r="3"/><path d="M20 4 8.12 15.88"/><path d="M14.47 14.48 20 20"/><path d="m8.12 8.12 12.01 12.01"/></svg>',
    leaf:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 13a9 9 0 0 1 9-9 9 9 0 0 1-9 9z"/><path d="M12 12v9"/><path d="M12 12 8 8"/><path d="M12 12l4-4"/></svg>',
    package2:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16.5 9.4 7.55 4.24"/><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="M3.27 6.96 12 12l8.73-5.04"/><path d="M12 22V12"/></svg>',
    circleDollar:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M16 12a2 2 0 0 0-2-2h-3a2 2 0 0 0 0 4h3a2 2 0 1 1 0 4H9"/><path d="M12 6v2m0 8v2"/></svg>',
    calendarClock:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 7H3"/><path d="M21 19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h2"/><path d="M16 5h2a2 2 0 0 1 2 2v4"/><path d="M3 11h18"/><path d="M9 5V3"/><path d="M15 5V3"/><circle cx="16" cy="16" r="4"/><path d="M16 14v2l1 1"/></svg>',
    scale:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m8.5 7.5 7 9"/><path d="m15.5 7.5-7 9"/><path d="M12 19A7 7 0 0 1 12 5"/></svg>',
    sparkles:
      '<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3v4m0 0 2-2m-2 2L10 5"/><path d="m5 19 2-2-2-2 2 2 2-2-2 2 2 2-2-2Z"/><path d="M17 8l2-2-2-2 2 2 2-2-2 2 2 2-2-2Z"/><path d="M14 17h-4a3 3 0 0 0-3 3h10a3 3 0 0 0-3-3Z"/></svg>'
  };

  const toneMap = {
    health: { bg: 'var(--schurwolle)', ring: 'rgba(0, 32, 73, 0.14)', accent: 'var(--sahlchen)' },
    care: { bg: 'var(--himmelblau)', ring: 'rgba(0, 32, 73, 0.12)', accent: '#0c4a6e' },
    logistics: { bg: '#f6f0e8', ring: 'rgba(0, 32, 73, 0.1)', accent: 'var(--taubenblau)' },
    finance: { bg: '#edf9f2', ring: 'rgba(0, 128, 96, 0.18)', accent: 'var(--weidegruen)' },
    neutral: { bg: '#f5f7fb', ring: 'rgba(0, 32, 73, 0.08)', accent: 'var(--taubenblau)' }
  };

  const formatDate = (value) => {
    const date = new Date(value);
    if (Number.isNaN(date.valueOf())) return value;
    return date.toLocaleDateString('de-AT', { year: 'numeric', month: 'long', day: 'numeric' });
  };

  const formatCurrency = (value) => {
    if (value === null || value === undefined || Number.isNaN(value)) return null;
    return new Intl.NumberFormat('de-AT', { style: 'currency', currency: 'EUR' }).format(Number(value));
  };

  const normalizeEvents = (events) => {
    if (!Array.isArray(events)) return [];

    return events.map((event) => ({
      eventType: event.eventType ?? event.EventType ?? '',
      eventDate: event.eventDate ?? event.EventDate ?? '',
      alpakaNames: event.alpakaNames ?? event.AlpakaNames ?? [],
      comment: event.comment ?? event.Comment ?? '',
      cost: event.cost ?? event.Cost ?? null
    }));
  };

  const getEventVisuals = (eventType) => {
    const normalized = (eventType ?? '').toLowerCase();

    if (/impf|vak|med|arzt|vet|doc|gesund/.test(normalized)) {
      return { icon: iconLibrary.syringe, tone: toneMap.health };
    }

    if (/pflege|schur|fell|haare|check/.test(normalized)) {
      return { icon: iconLibrary.scissors, tone: toneMap.care };
    }

    if (/gewicht|wiege|messen/.test(normalized)) {
      return { icon: iconLibrary.scale, tone: toneMap.health };
    }

    if (/anliefer|transport|anreise|bewegung|stall|umzug/.test(normalized)) {
      return { icon: iconLibrary.package2, tone: toneMap.logistics };
    }

    if (/kosten|rechnung|zahlung|euro|preis/.test(normalized)) {
      return { icon: iconLibrary.circleDollar, tone: toneMap.finance };
    }

    if (/weide|futter|natur|draußen/.test(normalized)) {
      return { icon: iconLibrary.leaf, tone: toneMap.care };
    }

    return { icon: iconLibrary.calendarClock, tone: toneMap.neutral };
  };

  const renderEvents = (events) => {
    if (!eventsContainer) return;

    eventsContainer.classList.remove('loading');
    eventsContainer.innerHTML = '';

    if (!events || events.length === 0) {
      const empty = document.createElement('div');
      empty.className = 'empty-state';
      empty.innerHTML = `${iconLibrary.sparkles}<p>Noch keine Ereignisse vorhanden.</p>`;
      eventsContainer.appendChild(empty);
      return;
    }

    const list = document.createElement('ul');
    list.className = 'event-list';

    events.forEach((item) => {
      const entry = document.createElement('li');
      const { icon, tone } = getEventVisuals(item.eventType);
      entry.className = 'event-item';
      entry.style.setProperty('--tone-bg', tone.bg);
      entry.style.setProperty('--tone-ring', tone.ring);
      entry.style.setProperty('--tone-accent', tone.accent);

      const layout = document.createElement('div');
      layout.className = 'event-layout';

      const iconWrap = document.createElement('div');
      iconWrap.className = 'event-icon';
      iconWrap.innerHTML = icon;

      const content = document.createElement('div');
      content.className = 'event-body';

      const header = document.createElement('div');
      header.className = 'event-header';

      const title = document.createElement('div');
      title.className = 'event-title';
      title.textContent = item.eventType || 'Ereignis';

      const badge = document.createElement('div');
      badge.className = 'event-badge';
      badge.textContent = 'Neu';

      const leftStack = document.createElement('div');
      leftStack.className = 'event-title-stack';
      leftStack.appendChild(title);
      leftStack.appendChild(badge);

      const date = document.createElement('div');
      date.className = 'event-date';
      date.textContent = formatDate(item.eventDate);

      header.appendChild(leftStack);
      header.appendChild(date);

      content.appendChild(header);

      if (Array.isArray(item.alpakaNames) && item.alpakaNames.length > 0) {
        const chips = document.createElement('div');
        chips.className = 'alpaka-chips';
        item.alpakaNames.forEach((name) => {
          const chip = document.createElement('span');
          chip.className = 'alpaka-chip';
          chip.textContent = name;
          chips.appendChild(chip);
        });
        content.appendChild(chips);
      }

      if (item.comment) {
        const comment = document.createElement('p');
        comment.className = 'event-comment';
        comment.textContent = item.comment;
        content.appendChild(comment);
      }

      const formattedCost = formatCurrency(item.cost);
      if (formattedCost) {
        const cost = document.createElement('p');
        cost.className = 'event-cost';
        cost.textContent = `Kosten: ${formattedCost}`;
        content.appendChild(cost);
      }

      layout.appendChild(iconWrap);
      layout.appendChild(content);
      entry.appendChild(layout);
      list.appendChild(entry);
    });

    eventsContainer.appendChild(list);
  };

  const loadEvents = async () => {
    if (!eventsContainer) return;
    eventsContainer.classList.add('loading');
    eventsContainer.innerHTML = '<p class="loading-text">Lade Ereignisse...</p>';

    try {
      const response = await fetch('/api/events');
      if (!response.ok) {
        throw new Error('Ereignisse konnten nicht geladen werden.');
      }
      const events = await response.json();
      renderEvents(normalizeEvents(events));
    } catch (error) {
      console.error(error);
      eventsContainer.classList.remove('loading');
      eventsContainer.innerHTML = '<p class="error">Ereignisse konnten nicht geladen werden.</p>';
    }
  };

  loadEvents();
</script>

