---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Alpaka Detail">
  <section class="alpaka-detail section">
    <div class="container">
      <a class="back-link" href="/">← Zurück zur Übersicht</a>
        <div id="alpaka-detail-card" class="alpaka-detail-card loading">
          <div class="alpaka-detail-header">
            <p class="alpaka-detail-title">Alpaka Details</p>
            <button
              id="edit-alpaka-button"
              class="edit-btn"
              type="button"
              aria-label="Alpaka bearbeiten"
              title="Alpaka bearbeiten"
              hidden
            >
              <svg
                aria-hidden="true"
                focusable="false"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M12 20h9" />
                <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5Z" />
              </svg>
            </button>
          </div>

        <div id="alpaka-detail-content">
          <p class="loading-text">Lade Alpaka...</p>
        </div>

        <form id="alpaka-edit-form" class="alpaka-edit-form" enctype="multipart/form-data" hidden>
          <div class="form-field">
            <label for="alpaka-name">Name*</label>
            <input id="alpaka-name" name="name" type="text" maxlength="100" required />
          </div>
          <div class="form-field">
            <label for="alpaka-geburtsdatum">Geburtsdatum*</label>
            <input id="alpaka-geburtsdatum" name="geburtsdatum" type="date" required />
          </div>
          <div class="form-field">
            <label for="alpaka-photo">Neues Foto (optional)</label>
            <input id="alpaka-photo" name="photo" type="file" accept=".png,.jpg,.jpeg" />
            <p class="form-hint">Maximal 15 MB, .png, .jpg oder .jpeg</p>
          </div>
          <div class="form-actions">
            <button id="cancel-edit" class="btn secondary" type="button">Abbrechen</button>
            <button id="submit-edit" class="btn" type="submit">Änderungen speichern</button>
          </div>
          <p id="alpaka-edit-status" class="edit-status" role="status"></p>
        </form>
      </div>
      <div id="alpaka-events" class="alpaka-events" hidden>
        <h3>Ereignisse</h3>
        <div id="alpaka-events-content" class="alpaka-events-content loading">
          <p class="loading-text">Lade Ereignisse...</p>
        </div>
      </div>
    </div>
  </section>
</DashboardLayout>

<script>
  const detailCard = document.getElementById('alpaka-detail-card');
  const eventsSection = document.getElementById('alpaka-events');
  const eventsContent = document.getElementById('alpaka-events-content');
  const detailContent = document.getElementById('alpaka-detail-content');
  const editButton = document.getElementById('edit-alpaka-button');
  const editForm = document.getElementById('alpaka-edit-form');
  const cancelEditButton = document.getElementById('cancel-edit');
  const editStatus = document.getElementById('alpaka-edit-status');
  const nameInput = document.getElementById('alpaka-name');
  const geburtsdatumInput = document.getElementById('alpaka-geburtsdatum');
  const photoInput = document.getElementById('alpaka-photo');
  const submitEditButton = document.getElementById('submit-edit');
  const searchParams = new URLSearchParams(window.location.search);
  const alpakaId = searchParams.get('id');

  const renderError = (message) => {
    if (!detailCard || !detailContent) return;
    detailCard.classList.remove('loading');
    detailContent.innerHTML = '';
    const errorMessage = document.createElement('p');
    errorMessage.className = 'error';
    errorMessage.textContent = message;
    detailContent.appendChild(errorMessage);
  };

  const calculateAge = (dateString) => {
    const birthDate = new Date(dateString);
    const today = new Date();
    if (Number.isNaN(birthDate.valueOf())) {
      return 'Unbekannt';
    }
    let age = today.getFullYear() - birthDate.getFullYear();
    const monthDiff = today.getMonth() - birthDate.getMonth();
    if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
      age--;
    }
    return age < 0 ? 'Unbekannt' : `${age} Jahr${age === 1 ? '' : 'e'}`;
  };

  const formatDate = (dateString) => {
    const birthDate = new Date(dateString);
    if (Number.isNaN(birthDate.valueOf())) {
      return 'Unbekannt';
    }
    return birthDate.toLocaleDateString('de-AT', { year: 'numeric', month: 'long', day: 'numeric' });
  };

  const formatDateForInput = (dateString) => {
    const birthDate = new Date(dateString);
    if (Number.isNaN(birthDate.valueOf())) {
      return '';
    }
    const year = birthDate.getFullYear();
    const month = String(birthDate.getMonth() + 1).padStart(2, '0');
    const day = String(birthDate.getDate()).padStart(2, '0');
    return `${year}-${month}-${day}`;
  };

  const setEditMode = (active) => {
    if (!editForm || !detailContent || !editButton || !detailCard) return;
    detailCard.classList.toggle('editing', active);
    editForm.hidden = !active;
    detailContent.hidden = active;
    editButton.disabled = active;
    if (!active && editStatus) {
      editStatus.textContent = '';
    }
  };

  const populateEditForm = (alpaka) => {
    if (!nameInput || !geburtsdatumInput || !editButton) return;
    nameInput.value = alpaka.Name ?? '';
    geburtsdatumInput.value = formatDateForInput(alpaka.Geburtsdatum);
    editButton.hidden = false;
  };

  const renderAlpaka = (alpaka) => {
    if (!detailCard || !detailContent) return;
    detailCard.classList.remove('loading');
    detailContent.innerHTML = '';

    if (alpaka.ImageUrl) {
      const photo = document.createElement('img');
      photo.className = 'alpaka-photo';
      photo.src = alpaka.ImageUrl;
      photo.alt = alpaka.Name;
      detailContent.appendChild(photo);
    } else {
      const placeholder = document.createElement('div');
      placeholder.className = 'alpaka-photo placeholder';
      placeholder.textContent = alpaka.Name.charAt(0).toUpperCase();
      detailContent.appendChild(placeholder);
    }

    const heading = document.createElement('h2');
    heading.textContent = alpaka.Name;
    detailContent.appendChild(heading);

    const age = document.createElement('p');
    age.className = 'alpaka-meta';
    age.textContent = `Alter: ${calculateAge(alpaka.Geburtsdatum)}`;
    detailContent.appendChild(age);

    const birthDate = document.createElement('p');
    birthDate.className = 'alpaka-meta';
    birthDate.textContent = `Geburtsdatum: ${formatDate(alpaka.Geburtsdatum)}`;
    detailContent.appendChild(birthDate);

    populateEditForm(alpaka);
  };

  const loadAlpaka = async (id) => {
    if (!detailCard) return;
    try {
      const response = await fetch(`/api/alpakas/${encodeURIComponent(id)}`);
      if (response.status === 404) {
        renderError('Alpaka nicht gefunden.');
        return;
      }
      if (!response.ok) {
        throw new Error(`Failed to load alpaka ${id}`);
      }
      const alpaka = await response.json();
      renderAlpaka(alpaka);
      loadEvents(id);
    } catch (error) {
      console.error(error);
      renderError('Alpaka konnte nicht geladen werden.');
    }
  };

  const formatCurrency = (value) => {
    if (value === null || value === undefined || Number.isNaN(value)) return '';
    return new Intl.NumberFormat('de-AT', { style: 'currency', currency: 'EUR' }).format(Number(value));
  };

  const formatEventDate = (value) => {
    const date = new Date(value);
    if (Number.isNaN(date.valueOf())) return value;
    return date.toLocaleDateString('de-AT', { year: 'numeric', month: 'long', day: 'numeric' });
  };

  const renderEvents = (events) => {
    if (!eventsContent || !eventsSection) return;
    eventsSection.hidden = false;
    eventsContent.classList.remove('loading');
    eventsContent.innerHTML = '';

    if (!events || events.length === 0) {
      const empty = document.createElement('p');
      empty.textContent = 'Keine Ereignisse vorhanden.';
      eventsContent.appendChild(empty);
      return;
    }

    const list = document.createElement('ul');
    list.className = 'event-list';

    events.forEach((item) => {
      const li = document.createElement('li');
      li.className = 'event-list-item';

      const header = document.createElement('div');
      header.className = 'event-header';
      const title = document.createElement('span');
      title.className = 'event-title';
      title.textContent = item.eventType;
      const date = document.createElement('span');
      date.className = 'event-date';
      date.textContent = formatEventDate(item.eventDate);
      header.appendChild(title);
      header.appendChild(date);
      li.appendChild(header);

      if (item.comment) {
        const comment = document.createElement('p');
        comment.className = 'event-comment';
        comment.textContent = item.comment;
        li.appendChild(comment);
      }

      if (item.cost !== null && item.cost !== undefined) {
        const cost = document.createElement('p');
        cost.className = 'event-cost';
        cost.textContent = `Kosten: ${formatCurrency(item.cost)}`;
        li.appendChild(cost);
      }

      list.appendChild(li);
    });

    eventsContent.appendChild(list);
  };

  const loadEvents = async (id) => {
    if (!eventsContent) return;
    eventsContent.classList.add('loading');
    eventsContent.innerHTML = '<p class="loading-text">Lade Ereignisse...</p>';
    try {
      const response = await fetch(`/api/alpakas/${encodeURIComponent(id)}/events`);
      if (!response.ok) {
        throw new Error('Ereignisse konnten nicht geladen werden.');
      }
      const events = await response.json();
      renderEvents(events);
    } catch (error) {
      console.error(error);
      if (eventsContent) {
        eventsContent.classList.remove('loading');
        eventsContent.innerHTML = '<p class="error">Ereignisse konnten nicht geladen werden.</p>';
        if (eventsSection) eventsSection.hidden = false;
      }
    }
  };

  const maxFileSize = 15 * 1024 * 1024; // 15 MB (must match backend)

  const submitEdit = async (event) => {
    if (!alpakaId || !editForm || !submitEditButton) return;
    event.preventDefault();

    const file = photoInput?.files?.[0];
    if (file && file.size > maxFileSize) {
      alert(`Bild ist zu groß. Maximal ${maxFileSize / (1024 * 1024)}MB erlaubt.`);
      return;
    }

    submitEditButton.disabled = true;
    submitEditButton.classList.add('loading');
    if (editStatus) {
      editStatus.textContent = 'Speichere Änderungen...';
    }

    try {
      const formData = new FormData(editForm);
      const response = await fetch(`/api/alpakas/${encodeURIComponent(alpakaId)}`, {
        method: 'PUT',
        body: formData,
      });

      if (!response.ok) {
        throw new Error('Update failed');
      }

      const updatedAlpaka = await response.json();
      renderAlpaka(updatedAlpaka);
      setEditMode(false);
      if (editStatus) {
        editStatus.textContent = 'Änderungen gespeichert!';
      }
    } catch (error) {
      console.error(error);
      if (editStatus) {
        editStatus.textContent = 'Speichern fehlgeschlagen. Bitte versuche es erneut.';
      }
    } finally {
      submitEditButton.disabled = false;
      submitEditButton.classList.remove('loading');
      if (photoInput) {
        photoInput.value = '';
      }
    }
  };

  editButton?.addEventListener('click', () => setEditMode(true));
  cancelEditButton?.addEventListener('click', () => setEditMode(false));
  editForm?.addEventListener('submit', submitEdit);

  // Ensure the form stays hidden until "Alpaka bearbeiten" is clicked.
  setEditMode(false);

  if (!alpakaId) {
    renderError('Es wurde kein Alpaka angegeben.');
  } else {
    loadAlpaka(alpakaId);
  }
</script>

<style>
  .alpaka-detail {
    background-color: var(--himmelblau);
    color: var(--schurwolle);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    color: inherit;
    text-decoration: none;
    font-weight: 600;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .alpaka-detail-card {
    background-color: var(--schurwolle);
    color: var(--taubenblau);
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    max-width: 32rem;
  }

  .alpaka-detail-card.loading {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 12rem;
  }

  :global(.alpaka-photo) {
    display: block;
    width: min(100%, 18rem);
    aspect-ratio: 3 / 4;
    border-radius: 0.5rem;
    object-fit: cover;
    margin: 0 auto 1.5rem;
  }

  :global(.alpaka-photo.placeholder) {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--weidegruen);
    color: var(--schurwolle);
    font-size: 2.5rem;
    font-weight: 700;
  }

  .alpaka-detail-card h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 2rem;
  }

  :global(.alpaka-meta) {
    margin: 0.25rem 0;
    font-weight: 500;
  }

  :global(.loading-text) {
    margin: 0;
    font-weight: 600;
  }

  :global(.error) {
    margin: 0;
    color: var(--backstein);
    font-weight: 600;
  }

  .alpaka-events {
    margin-top: 2rem;
    background-color: var(--schurwolle);
    color: var(--taubenblau);
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .alpaka-events h3 {
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .event-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-list-item {
    padding: 1rem;
    border: 1px solid var(--taubenblau);
    border-radius: 0.5rem;
    background-color: var(--auwasser);
  }

  .event-header {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    align-items: baseline;
  }

  .event-title {
    font-weight: 700;
  }

  .event-date {
    font-weight: 600;
  }

  .event-comment {
    margin: 0.5rem 0 0;
  }

  .event-cost {
    margin: 0.25rem 0 0;
    font-weight: 600;
  }

  @media (max-width: 600px) {
    .event-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  .alpaka-detail-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .alpaka-detail-title {
    margin: 0;
    font-weight: 700;
  }

  .edit-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--weidegruen);
    color: var(--schurwolle);
    border: none;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 600;
    padding: 0.5rem;
  }

  .edit-btn svg {
    width: 1.1rem;
    height: 1.1rem;
  }

  .edit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .alpaka-edit-form {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--taubenblau);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-hint {
    margin: 0.25rem 0 0;
    font-size: 0.9rem;
    color: var(--taubenblau);
  }

  .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    align-items: center;
  }

  .btn.secondary {
    background: transparent;
    color: var(--taubenblau);
    border: 1px solid var(--taubenblau);
  }

  .edit-status {
    margin: 0;
    font-weight: 600;
    color: var(--taubenblau);
  }
</style>
