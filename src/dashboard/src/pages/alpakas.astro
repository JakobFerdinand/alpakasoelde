---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import EventList from '../components/EventList.astro';
---

<DashboardLayout title="Alpaka Detail">
  <section class="alpaka-detail section">
    <div class="container">
      <a class="back-link" href="/">&larr; Zurück zur Übersicht</a>
        <div id="alpaka-detail-card" class="alpaka-detail-card loading">
          <div class="alpaka-detail-header">
            <p class="alpaka-detail-title">Alpaka Details</p>
            <button
              id="edit-alpaka-button"
              class="edit-btn"
              type="button"
              aria-label="Alpaka bearbeiten"
              title="Alpaka bearbeiten"
              hidden
            >
              <svg
                aria-hidden="true"
                focusable="false"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M12 20h9" />
                <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5Z" />
              </svg>
            </button>
          </div>

        <div id="alpaka-detail-content">
          <p class="loading-text">Lade Alpaka...</p>
        </div>
      </div>
      <div id="alpaka-events" class="alpaka-events" hidden>
        <h3>Ereignisse</h3>
        <EventList
          id="alpaka-events-content"
          loadingText="Lade Ereignisse..."
          emptyText="Keine Ereignisse vorhanden."
        />
      </div>
    </div>
  </section>
</DashboardLayout>

<script>
  import { calculateAge, formatDateLong, formatDateForInput } from '../utils/formatters';
  import { normalizeEvents, renderEventList } from '../components/event-list';

  const detailCard = document.getElementById('alpaka-detail-card');
  const eventsSection = document.getElementById('alpaka-events');
  const eventsContent = document.getElementById('alpaka-events-content');
  const detailContent = document.getElementById('alpaka-detail-content');
  const editButton = document.getElementById('edit-alpaka-button') as HTMLButtonElement | null;
  let editForm: HTMLFormElement | null = null;
  let cancelEditButton: HTMLButtonElement | null = null;
  let editStatus: HTMLParagraphElement | null = null;
  let nameInput: HTMLInputElement | null = null;
  let geburtsdatumInput: HTMLInputElement | null = null;
  let photoInput: HTMLInputElement | null = null;
  let submitEditButton: HTMLButtonElement | null = null;
  let currentAlpaka: any = null;
  const searchParams = new URLSearchParams(window.location.search);
  const alpakaId = searchParams.get('id');

  const renderError = (message: string) => {
    if (!detailCard || !detailContent) return;
    detailCard.classList.remove('loading');
    detailContent.innerHTML = '';
    const errorMessage = document.createElement('p');
    errorMessage.className = 'error';
    errorMessage.textContent = message;
    detailContent.appendChild(errorMessage);
  };

  const createPhotoElement = (alpaka: any) => {
    if (alpaka.ImageUrl) {
      const photo = document.createElement('img');
      photo.className = 'alpaka-photo';
      photo.src = alpaka.ImageUrl;
      photo.alt = alpaka.Name;
      return photo;
    }

    const placeholder = document.createElement('div');
    placeholder.className = 'alpaka-photo placeholder';
    placeholder.textContent = alpaka.Name.charAt(0).toUpperCase();
    return placeholder;
  };

  const renderReadOnlyAlpaka = (alpaka: any) => {
    if (!detailCard || !detailContent) return;
    detailCard.classList.remove('editing');
    detailContent.hidden = false;
    detailContent.innerHTML = '';

    detailContent.appendChild(createPhotoElement(alpaka));

    const heading = document.createElement('h2');
    heading.textContent = alpaka.Name;
    detailContent.appendChild(heading);

    const age = document.createElement('p');
    age.className = 'alpaka-meta';
    age.textContent = `Alter: ${calculateAge(alpaka.Geburtsdatum)}`;
    detailContent.appendChild(age);

    const birthDate = document.createElement('p');
    birthDate.className = 'alpaka-meta';
    birthDate.textContent = `Geburtsdatum: ${formatDateLong(alpaka.Geburtsdatum)}`;
    detailContent.appendChild(birthDate);
  };

  const buildEditForm = (alpaka: any) => {
    if (!detailContent) return null;

    editForm = document.createElement('form');
    editForm.id = 'alpaka-edit-form';
    editForm.className = 'alpaka-edit-form';
    editForm.enctype = 'multipart/form-data';

    const nameField = document.createElement('div');
    nameField.className = 'form-field';
    const nameLabel = document.createElement('label');
    nameLabel.setAttribute('for', 'alpaka-name');
    nameLabel.textContent = 'Name*';
    nameInput = document.createElement('input');
    nameInput.id = 'alpaka-name';
    nameInput.name = 'name';
    nameInput.type = 'text';
    nameInput.maxLength = 100;
    nameInput.required = true;
    nameField.appendChild(nameLabel);
    nameField.appendChild(nameInput);

    const birthField = document.createElement('div');
    birthField.className = 'form-field';
    const birthLabel = document.createElement('label');
    birthLabel.setAttribute('for', 'alpaka-geburtsdatum');
    birthLabel.textContent = 'Geburtsdatum*';
    geburtsdatumInput = document.createElement('input');
    geburtsdatumInput.id = 'alpaka-geburtsdatum';
    geburtsdatumInput.name = 'geburtsdatum';
    geburtsdatumInput.type = 'date';
    geburtsdatumInput.required = true;
    birthField.appendChild(birthLabel);
    birthField.appendChild(geburtsdatumInput);

    const photoField = document.createElement('div');
    photoField.className = 'form-field';
    const photoLabel = document.createElement('label');
    photoLabel.setAttribute('for', 'alpaka-photo');
    photoLabel.textContent = 'Neues Foto (optional)';
    photoInput = document.createElement('input');
    photoInput.id = 'alpaka-photo';
    photoInput.name = 'photo';
    photoInput.type = 'file';
    photoInput.accept = '.png,.jpg,.jpeg';
    const photoHint = document.createElement('p');
    photoHint.className = 'form-hint';
    photoHint.textContent = 'Maximal 15 MB, .png, .jpg oder .jpeg';
    photoField.appendChild(photoLabel);
    photoField.appendChild(photoInput);
    photoField.appendChild(photoHint);

    const formActions = document.createElement('div');
    formActions.className = 'form-actions';
    cancelEditButton = document.createElement('button');
    cancelEditButton.id = 'cancel-edit';
    cancelEditButton.className = 'ghost-button';
    cancelEditButton.type = 'button';
    cancelEditButton.textContent = 'Abbrechen';
    submitEditButton = document.createElement('button');
    submitEditButton.id = 'submit-edit';
    submitEditButton.className = 'primary-button';
    submitEditButton.type = 'submit';
    submitEditButton.textContent = 'Änderungen speichern';
    formActions.appendChild(cancelEditButton);
    formActions.appendChild(submitEditButton);

    editStatus = document.createElement('p');
    editStatus.id = 'alpaka-edit-status';
    editStatus.className = 'edit-status';
    editStatus.setAttribute('role', 'status');

    editForm.appendChild(nameField);
    editForm.appendChild(birthField);
    editForm.appendChild(photoField);
    editForm.appendChild(formActions);
    editForm.appendChild(editStatus);

    nameInput.value = alpaka.Name ?? '';
    geburtsdatumInput.value = formatDateForInput(alpaka.Geburtsdatum);

    cancelEditButton.addEventListener('click', () => setEditMode(false));
    editForm.addEventListener('submit', submitEdit);

    return editForm;
  };

  const renderEditableAlpaka = (alpaka: any) => {
    if (!detailContent || !editButton || !detailCard) return;
    detailCard.classList.add('editing');
    detailContent.hidden = false;
    detailContent.innerHTML = '';

    detailContent.appendChild(createPhotoElement(alpaka));

    const heading = document.createElement('h2');
    heading.textContent = alpaka.Name;
    detailContent.appendChild(heading);

    const form = buildEditForm(alpaka);
    if (form) {
      detailContent.appendChild(form);
    }
  };

  const setEditMode = (active: boolean) => {
    if (!detailContent || !editButton || !detailCard) return;
    editButton.disabled = active;

    if (!currentAlpaka) {
      return;
    }

    if (active) {
      renderEditableAlpaka(currentAlpaka);
    } else {
      if (editStatus) {
        editStatus.textContent = '';
      }
      renderReadOnlyAlpaka(currentAlpaka);
      editForm = null;
      cancelEditButton = null;
      nameInput = null;
      geburtsdatumInput = null;
      photoInput = null;
      submitEditButton = null;
      editStatus = null;
    }
  };

  const renderAlpaka = (alpaka: any) => {
    if (!detailCard || !detailContent || !editButton) return;
    currentAlpaka = alpaka;
    detailCard.classList.remove('loading');
    renderReadOnlyAlpaka(alpaka);
    editButton.hidden = false;
  };

  const loadAlpaka = async (id: string) => {
    if (!detailCard) return;
    try {
      const response = await fetch(`/api/alpakas/${encodeURIComponent(id)}`);
      if (response.status === 404) {
        renderError('Alpaka nicht gefunden.');
        return;
      }
      if (!response.ok) {
        throw new Error(`Failed to load alpaka ${id}`);
      }
      const alpaka = await response.json();
      renderAlpaka(alpaka);
      if (eventsSection && eventsContent) {
        eventsSection.hidden = false;
        renderEventList(eventsContent, normalizeEvents(alpaka.Events ?? alpaka.events ?? []), {
          emptyText: eventsContent.dataset.emptyText ?? 'Keine Ereignisse vorhanden.',
          showAlpakaNames: false
        });
      }
    } catch (error) {
      console.error(error);
      renderError('Alpaka konnte nicht geladen werden.');
    }
  };

  const maxFileSize = 15 * 1024 * 1024; // 15 MB (must match backend)

  const submitEdit = async (event: Event) => {
    if (!alpakaId || !editForm || !submitEditButton) return;
    event.preventDefault();

    const file = photoInput?.files?.[0];
    if (file && file.size > maxFileSize) {
      alert(`Bild ist zu groß. Maximal ${maxFileSize / (1024 * 1024)}MB erlaubt.`);
      return;
    }

    submitEditButton.disabled = true;
    submitEditButton.classList.add('loading');
    if (editStatus) {
      editStatus.textContent = 'Speichere Änderungen...';
    }

    try {
      const formData = new FormData(editForm);
      const response = await fetch(`/api/alpakas/${encodeURIComponent(alpakaId)}`, {
        method: 'PUT',
        body: formData,
      });

      if (!response.ok) {
        throw new Error('Update failed');
      }

      const updatedAlpaka = await response.json();
      renderAlpaka(updatedAlpaka);
      setEditMode(false);
      if (editStatus) {
        editStatus.textContent = 'Änderungen gespeichert!';
      }
    } catch (error) {
      console.error(error);
      if (editStatus) {
        editStatus.textContent = 'Speichern fehlgeschlagen. Bitte versuche es erneut.';
      }
    } finally {
      submitEditButton.disabled = false;
      submitEditButton.classList.remove('loading');
      if (photoInput) {
        photoInput.value = '';
      }
    }
  };

  editButton?.addEventListener('click', () => setEditMode(true));

  // Start in view mode until the user chooses to edit.
  setEditMode(false);

  if (!alpakaId) {
    renderError('Es wurde kein Alpaka angegeben.');
  } else {
    loadAlpaka(alpakaId);
  }
</script>

<style>
  .alpaka-detail {
    background-color: var(--himmelblau);
    color: var(--schurwolle);
  }

  .alpaka-detail-card {
    background-color: var(--schurwolle);
    color: var(--taubenblau);
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    width: 100%;
  }

  .alpaka-detail-card.loading {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 12rem;
  }

  :global(.alpaka-photo) {
    display: block;
    width: min(100%, 18rem);
    aspect-ratio: 3 / 4;
    border-radius: 0.5rem;
    object-fit: cover;
    margin: 0 auto 1.5rem;
  }

  :global(.alpaka-photo.placeholder) {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--weidegruen);
    color: var(--schurwolle);
    font-size: 2.5rem;
    font-weight: 700;
  }

  .alpaka-detail-card h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 2rem;
  }

  :global(.alpaka-meta) {
    margin: 0.25rem 0;
    font-weight: 500;
  }

  .alpaka-events {
    margin-top: 2rem;
    background-color: var(--schurwolle);
    color: var(--taubenblau);
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .alpaka-events h3 {
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .alpaka-detail-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .alpaka-detail-title {
    margin: 0;
    font-weight: 700;
  }

  .edit-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--weidegruen);
    color: var(--schurwolle);
    border: none;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 600;
    padding: 0.5rem;
  }

  .edit-btn svg {
    width: 1.1rem;
    height: 1.1rem;
  }

  .edit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .alpaka-edit-form {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--taubenblau);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .edit-status {
    margin: 0;
    font-weight: 600;
    color: var(--taubenblau);
  }
</style>
