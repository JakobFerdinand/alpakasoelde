---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Gutscheine">
  <section class="vouchers section">
    <div class="container">
      <a class="back-link" href="/">← Zurück zur Übersicht</a>
      <div class="vouchers-grid">
        <div class="voucher-card">
          <p class="eyebrow">Neu</p>
          <h2>Gutschein erfassen</h2>
          <p class="card-subtitle">Verkäufe dokumentieren und optional das Einlösedatum festhalten.</p>
          <form id="voucher-form" class="voucher-form">
            <div class="form-field">
              <label for="kaufdatum">Kaufdatum*</label>
              <input id="kaufdatum" name="kaufdatum" type="date" required />
            </div>
            <div class="form-field">
              <label for="betrag">Betrag (EUR)*</label>
              <input id="betrag" name="betrag" type="number" step="0.01" min="0.01" required />
            </div>
            <div class="form-field">
              <label for="eingeloestAm">Eingelöst am (optional)</label>
              <input id="eingeloestAm" name="eingeloestAm" type="date" />
              <p class="form-hint">Nur ausfüllen, wenn der Gutschein bereits eingelöst wurde.</p>
            </div>
            <button id="submit-button" type="submit" class="primary-button">Gutschein speichern</button>
            <p id="voucher-status" class="status-message" hidden></p>
          </form>
        </div>
        <div class="voucher-card">
          <div class="list-header">
            <div>
              <p class="eyebrow">Übersicht</p>
              <h2>Verkaufte Gutscheine</h2>
              <p class="card-subtitle">Alle Gutscheine mit Kauf- und Einlösedaten.</p>
            </div>
            <button id="refresh-button" type="button" class="ghost-button">Aktualisieren</button>
          </div>
          <div id="voucher-list" class="voucher-list loading">
            <p class="loading-text">Lade Gutscheine...</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</DashboardLayout>

<script>
  const voucherForm = document.getElementById('voucher-form');
  const voucherList = document.getElementById('voucher-list');
  const statusMessage = document.getElementById('voucher-status');
  const submitButton = document.getElementById('submit-button');
  const refreshButton = document.getElementById('refresh-button');

  const formatDate = (value) => {
    if (!value) return '—';
    const date = new Date(value);
    if (Number.isNaN(date.valueOf())) return value;
    return date.toLocaleDateString('de-AT', { year: 'numeric', month: '2-digit', day: '2-digit' });
  };

  const formatCurrency = (value) => {
    if (value === null || value === undefined || Number.isNaN(Number(value))) return '—';
    return new Intl.NumberFormat('de-AT', { style: 'currency', currency: 'EUR' }).format(Number(value));
  };

  const normalizeVoucher = (voucher) => ({
    voucherNumber: voucher.voucherNumber ?? voucher.VoucherNumber ?? '',
    kaufdatum: voucher.kaufdatum ?? voucher.Kaufdatum ?? '',
    betrag: voucher.betrag ?? voucher.Betrag ?? null,
    eingeloestAm: voucher.eingeloestAm ?? voucher.EingeloestAm ?? null
  });

  const renderList = (vouchers) => {
    voucherList.classList.remove('loading');
    voucherList.innerHTML = '';

    if (!vouchers || vouchers.length === 0) {
      const empty = document.createElement('p');
      empty.className = 'empty';
      empty.textContent = 'Noch keine Gutscheine erfasst.';
      voucherList.appendChild(empty);
      return;
    }

    const table = document.createElement('div');
    table.className = 'voucher-table';

    const header = document.createElement('div');
    header.className = 'voucher-row voucher-head';
    ['Gutscheinnummer', 'Kaufdatum', 'Betrag', 'Eingelöst am'].forEach((title) => {
      const cell = document.createElement('div');
      cell.textContent = title;
      header.appendChild(cell);
    });
    table.appendChild(header);

    vouchers.forEach((voucher) => {
      const normalized = normalizeVoucher(voucher);
      const row = document.createElement('div');
      row.className = 'voucher-row';

      const number = document.createElement('div');
      number.textContent = normalized.voucherNumber || '—';
      row.appendChild(number);

      const purchaseDate = document.createElement('div');
      purchaseDate.textContent = formatDate(normalized.kaufdatum);
      row.appendChild(purchaseDate);

      const amount = document.createElement('div');
      amount.textContent = formatCurrency(normalized.betrag);
      row.appendChild(amount);

      const redeemed = document.createElement('div');
      redeemed.textContent = normalized.eingeloestAm ? formatDate(normalized.eingeloestAm) : 'Noch offen';
      row.appendChild(redeemed);

      table.appendChild(row);
    });

    voucherList.appendChild(table);
  };

  const loadVouchers = async () => {
    if (!voucherList) return;
    voucherList.classList.add('loading');
    voucherList.innerHTML = '<p class="loading-text">Lade Gutscheine...</p>';

    try {
      const response = await fetch('/api/gutscheine');
      if (!response.ok) throw new Error('Fehler beim Laden der Gutscheine');
      const data = await response.json();
      renderList(Array.isArray(data) ? data : []);
    } catch (error) {
      console.error(error);
      voucherList.classList.remove('loading');
      voucherList.innerHTML = '<p class="error">Gutscheine konnten nicht geladen werden.</p>';
    }
  };

  const showStatus = (message, isError = false) => {
    if (!statusMessage) return;
    statusMessage.hidden = false;
    statusMessage.textContent = message;
    statusMessage.classList.toggle('error', isError);
  };

  const resetStatus = () => {
    if (!statusMessage) return;
    statusMessage.hidden = true;
    statusMessage.textContent = '';
    statusMessage.classList.remove('error');
  };

  voucherForm?.addEventListener('submit', async (event) => {
    event.preventDefault();
    resetStatus();

    const kaufdatum = voucherForm.kaufdatum.value;
    const betrag = Number(voucherForm.betrag.value);
    const eingeloestAm = voucherForm.eingeloestAm.value || null;

    if (!kaufdatum || !betrag) {
      showStatus('Bitte Kaufdatum und Betrag ausfüllen.', true);
      return;
    }

    submitButton.disabled = true;
    submitButton.textContent = 'Speichern...';

    try {
      const response = await fetch('/api/gutscheine', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ kaufdatum, betrag, eingeloestAm })
      });

      if (!response.ok) {
        const error = await response.json().catch(() => null);
        throw new Error(error?.detail || 'Gutschein konnte nicht gespeichert werden.');
      }

      const result = await response.json();
      voucherForm.reset();
      showStatus(`Gutschein ${result.voucherNumber ?? ''} wurde gespeichert.`);
      await loadVouchers();
    } catch (error) {
      console.error(error);
      showStatus(error.message || 'Gutschein konnte nicht gespeichert werden.', true);
    } finally {
      submitButton.disabled = false;
      submitButton.textContent = 'Gutschein speichern';
    }
  });

  refreshButton?.addEventListener('click', loadVouchers);
  loadVouchers();
</script>

<style>
  .vouchers {
    background-color: var(--schurwolle);
    color: var(--taubenblau);
  }

  .vouchers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .voucher-card {
    background: #fff;
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  }

  .eyebrow {
    font-size: 0.9rem;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--sahlchen);
    margin: 0 0 0.25rem;
  }

  .card-subtitle {
    margin: 0.25rem 0 1rem;
    color: rgba(0, 32, 73, 0.7);
  }

  .voucher-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-field {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .form-field label {
    font-weight: 600;
    color: var(--taubenblau);
  }

  .form-field input {
    padding: 0.75rem 0.85rem;
    border: 1px solid rgba(0, 32, 73, 0.15);
    border-radius: 0.5rem;
    font-size: 1rem;
  }

  .form-hint {
    margin: 0;
    color: rgba(0, 32, 73, 0.6);
    font-size: 0.9rem;
  }

  .primary-button {
    background-color: var(--taubenblau);
    color: #fff;
    border: none;
    padding: 0.85rem 1rem;
    border-radius: 0.6rem;
    font-weight: 700;
    cursor: pointer;
  }

  .primary-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .ghost-button {
    background: transparent;
    border: 1px solid rgba(0, 32, 73, 0.15);
    padding: 0.65rem 0.9rem;
    border-radius: 0.6rem;
    color: var(--taubenblau);
    cursor: pointer;
  }

  .status-message {
    margin: 0;
    font-weight: 600;
    color: var(--weidegruen);
  }

  .status-message.error {
    color: #b00020;
  }

  .list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .voucher-list {
    border: 1px solid rgba(0, 32, 73, 0.08);
    border-radius: 0.75rem;
    padding: 1rem;
    min-height: 120px;
  }

  .voucher-list.loading {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .voucher-table {
    display: grid;
    gap: 0.5rem;
  }

  .voucher-row {
    display: grid;
    grid-template-columns: 1.2fr repeat(3, 1fr);
    gap: 0.75rem;
    padding: 0.5rem 0.25rem;
    border-bottom: 1px solid rgba(0, 32, 73, 0.08);
  }

  .voucher-row:last-child {
    border-bottom: none;
  }

  .voucher-head {
    font-weight: 700;
    color: var(--taubenblau);
    border-bottom: 2px solid rgba(0, 32, 73, 0.15);
  }

  .loading-text,
  .error,
  .empty {
    margin: 0;
  }

  .error {
    color: #b00020;
  }

  @media (max-width: 720px) {
    .list-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .voucher-row {
      grid-template-columns: repeat(2, 1fr);
    }

    .voucher-row div:nth-child(1) {
      grid-column: span 2;
      font-weight: 700;
    }
  }
</style>
