---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Gutscheine">
  <section class="vouchers section">
    <div class="container">
      <a class="back-link" href="/">← Zurück zur Übersicht</a>
      <div class="vouchers-grid">
        <div class="voucher-card">
          <p class="eyebrow">Neu</p>
          <h2>Gutschein erfassen</h2>
          <p class="card-subtitle">Verkäufe dokumentieren und optional das Einlösedatum festhalten.</p>
          <form id="voucher-form" class="voucher-form">
            <div class="form-field">
              <label for="gutscheinnummer">Gutscheinnummer</label>
              <input id="gutscheinnummer" name="gutscheinnummer" type="text" inputmode="numeric" placeholder="z. B. 202501" />
              <p class="form-hint">Standardmäßig wird die nächste Nummer vorgeschlagen. Bei Bedarf überschreiben.</p>
            </div>
            <div class="form-field">
              <label for="kaufdatum">Kaufdatum*</label>
              <input id="kaufdatum" name="kaufdatum" type="date" required />
            </div>
            <div class="form-field">
              <label for="betrag">Betrag (EUR)*</label>
              <input id="betrag" name="betrag" type="number" step="0.01" min="0.01" required />
            </div>
            <div class="form-field">
              <label for="eingeloestAm">Eingelöst am (optional)</label>
              <input id="eingeloestAm" name="eingeloestAm" type="date" />
              <p class="form-hint">Nur ausfüllen, wenn der Gutschein bereits eingelöst wurde.</p>
            </div>
            <button id="submit-button" type="submit" class="primary-button">Gutschein speichern</button>
            <p id="voucher-status" class="status-message" hidden></p>
          </form>
        </div>
        <div class="voucher-card">
          <div class="list-header">
            <div>
              <p class="eyebrow">Übersicht</p>
              <h2>Verkaufte Gutscheine</h2>
              <p class="card-subtitle">Alle Gutscheine mit Kauf- und Einlösedaten.</p>
            </div>
            <button id="refresh-button" type="button" class="ghost-button">Aktualisieren</button>
          </div>
          <div id="voucher-list" class="voucher-list loading">
            <p class="loading-text">Lade Gutscheine...</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</DashboardLayout>

<script>
  const voucherForm = document.getElementById('voucher-form');
  const voucherList = document.getElementById('voucher-list');
  const statusMessage = document.getElementById('voucher-status');
  const submitButton = document.getElementById('submit-button');
  const refreshButton = document.getElementById('refresh-button');
  const gutscheinnummerInput = document.getElementById('gutscheinnummer');

  const formatDate = (value) => {
    if (!value) return '—';
    const date = new Date(value);
    if (Number.isNaN(date.valueOf())) return value;
    return date.toLocaleDateString('de-AT', { year: 'numeric', month: '2-digit', day: '2-digit' });
  };

  const formatCurrency = (value) => {
    if (value === null || value === undefined || Number.isNaN(Number(value))) return '—';
    return new Intl.NumberFormat('de-AT', { style: 'currency', currency: 'EUR' }).format(Number(value));
  };

  const normalizeVoucher = (voucher) => ({
    gutscheinnummer: voucher.gutscheinnummer ?? voucher.Gutscheinnummer ?? '',
    kaufdatum: voucher.kaufdatum ?? voucher.Kaufdatum ?? '',
    betrag: voucher.betrag ?? voucher.Betrag ?? null,
    eingeloestAm: voucher.eingeloestAm ?? voucher.EingeloestAm ?? null
  });

  const renderList = (vouchers) => {
    voucherList.classList.remove('loading');
    voucherList.innerHTML = '';

    if (!vouchers || vouchers.length === 0) {
      const empty = document.createElement('p');
      empty.className = 'empty';
      empty.textContent = 'Noch keine Gutscheine erfasst.';
      voucherList.appendChild(empty);
      return;
    }

    const list = document.createElement('div');
    list.className = 'voucher-grid';

    vouchers.forEach((voucher) => {
      const normalized = normalizeVoucher(voucher);
      const card = document.createElement('article');
      card.className = 'voucher-item';

      const header = document.createElement('div');
      header.className = 'voucher-item__header';

      const number = document.createElement('p');
      number.className = 'voucher-number';
      number.textContent = normalized.gutscheinnummer || 'Ohne Nummer';
      header.appendChild(number);

      const status = document.createElement('span');
      const isRedeemed = Boolean(normalized.eingeloestAm);
      status.className = `status-pill ${isRedeemed ? 'status-success' : 'status-open'}`;
      status.textContent = isRedeemed
        ? `Eingelöst am ${formatDate(normalized.eingeloestAm)}`
        : 'Noch offen';
      header.appendChild(status);

      card.appendChild(header);

      const amount = document.createElement('p');
      amount.className = 'voucher-amount';
      amount.textContent = formatCurrency(normalized.betrag);
      card.appendChild(amount);

      const meta = document.createElement('dl');
      meta.className = 'voucher-meta';

      const addMeta = (label, value) => {
        const dt = document.createElement('dt');
        dt.textContent = label;
        const dd = document.createElement('dd');
        dd.textContent = value;
        meta.appendChild(dt);
        meta.appendChild(dd);
      };

      addMeta('Kaufdatum', formatDate(normalized.kaufdatum));
      addMeta('Einlösestatus', isRedeemed ? 'Eingelöst' : 'Nicht eingelöst');

      card.appendChild(meta);
      list.appendChild(card);
    });

    voucherList.appendChild(list);
  };

  const suggestNextNumber = (vouchers) => {
    if (!gutscheinnummerInput) return;

    const yearPrefix = new Date().getFullYear().toString();
    const highestSuffix = vouchers
      .map((voucher) => normalizeVoucher(voucher).gutscheinnummer)
      .filter((number) => number?.startsWith(yearPrefix))
      .map((number) => number?.slice(yearPrefix.length) ?? '0')
      .map((suffix) => (Number.isNaN(Number(suffix)) ? 0 : Number(suffix)))
      .reduce((max, current) => Math.max(max, current), 0);

    const nextNumber = `${yearPrefix}${String(highestSuffix + 1).padStart(2, '0')}`;
    if (!gutscheinnummerInput.value) {
      gutscheinnummerInput.value = nextNumber;
    }
  };

  const loadVouchers = async () => {
    if (!voucherList) return;
    voucherList.classList.add('loading');
    voucherList.innerHTML = '<p class="loading-text">Lade Gutscheine...</p>';

    try {
      const response = await fetch('/api/gutscheine');
      if (!response.ok) throw new Error('Fehler beim Laden der Gutscheine');
      const data = await response.json();
      const vouchers = Array.isArray(data) ? data : [];
      renderList(vouchers);
      suggestNextNumber(vouchers);
    } catch (error) {
      console.error(error);
      voucherList.classList.remove('loading');
      voucherList.innerHTML = '<p class="error">Gutscheine konnten nicht geladen werden.</p>';
    }
  };

  const showStatus = (message, isError = false) => {
    if (!statusMessage) return;
    statusMessage.hidden = false;
    statusMessage.textContent = message;
    statusMessage.classList.toggle('error', isError);
  };

  const resetStatus = () => {
    if (!statusMessage) return;
    statusMessage.hidden = true;
    statusMessage.textContent = '';
    statusMessage.classList.remove('error');
  };

  voucherForm?.addEventListener('submit', async (event) => {
    event.preventDefault();
    resetStatus();

    const gutscheinnummer = voucherForm.gutscheinnummer.value.trim();
    const kaufdatum = voucherForm.kaufdatum.value;
    const betrag = Number(voucherForm.betrag.value);
    const eingeloestAm = voucherForm.eingeloestAm.value || null;

    if (!kaufdatum || !betrag) {
      showStatus('Bitte Kaufdatum und Betrag ausfüllen.', true);
      return;
    }

    submitButton.disabled = true;
    submitButton.textContent = 'Speichern...';

    try {
      const response = await fetch('/api/gutscheine', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ gutscheinnummer: gutscheinnummer || undefined, kaufdatum, betrag, eingeloestAm })
      });

      if (!response.ok) {
        const error = await response.json().catch(() => null);
        throw new Error(error?.detail || 'Gutschein konnte nicht gespeichert werden.');
      }

      const result = await response.json();
      voucherForm.reset();
      suggestNextNumber([]);
      showStatus(`Gutschein ${result.gutscheinnummer ?? result.Gutscheinnummer ?? ''} wurde gespeichert.`);
      await loadVouchers();
    } catch (error) {
      console.error(error);
      showStatus(error.message || 'Gutschein konnte nicht gespeichert werden.', true);
    } finally {
      submitButton.disabled = false;
      submitButton.textContent = 'Gutschein speichern';
    }
  });

  refreshButton?.addEventListener('click', loadVouchers);
  loadVouchers();
</script>

<style>
  .vouchers {
    background-color: var(--schurwolle);
    color: var(--taubenblau);
  }

  .vouchers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .voucher-card {
    background: #fff;
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  }

  .eyebrow {
    font-size: 0.9rem;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--sahlchen);
    margin: 0 0 0.25rem;
  }

  .card-subtitle {
    margin: 0.25rem 0 1rem;
    color: rgba(0, 32, 73, 0.7);
  }

  .voucher-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-field {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .form-field label {
    font-weight: 600;
    color: var(--taubenblau);
  }

  .form-field input {
    padding: 0.75rem 0.85rem;
    border: 1px solid rgba(0, 32, 73, 0.15);
    border-radius: 0.5rem;
    font-size: 1rem;
  }

  .form-hint {
    margin: 0;
    color: rgba(0, 32, 73, 0.6);
    font-size: 0.9rem;
  }

  .primary-button {
    background-color: var(--taubenblau);
    color: #fff;
    border: none;
    padding: 0.85rem 1rem;
    border-radius: 0.6rem;
    font-weight: 700;
    cursor: pointer;
  }

  .primary-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .ghost-button {
    background: transparent;
    border: 1px solid rgba(0, 32, 73, 0.15);
    padding: 0.65rem 0.9rem;
    border-radius: 0.6rem;
    color: var(--taubenblau);
    cursor: pointer;
  }

  .status-message {
    margin: 0;
    font-weight: 600;
    color: var(--weidegruen);
  }

  .status-message.error {
    color: #b00020;
  }

  .list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .voucher-list {
    min-height: 120px;
    padding: 0.25rem;
  }

  .voucher-list.loading {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .voucher-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1rem;
  }

  .voucher-item {
    border: 1px solid rgba(0, 32, 73, 0.08);
    border-radius: 0.9rem;
    padding: 1rem 1.1rem;
    background: linear-gradient(135deg, #ffffff 0%, #f6fbff 100%);
    box-shadow: 0 10px 30px rgba(0, 32, 73, 0.06);
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .voucher-item__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .voucher-number {
    margin: 0;
    font-weight: 800;
    color: var(--taubenblau);
    letter-spacing: 0.02em;
  }

  .status-pill {
    border-radius: 999px;
    padding: 0.35rem 0.75rem;
    font-weight: 700;
    font-size: 0.9rem;
    border: 1px solid rgba(0, 32, 73, 0.08);
    background: #fff;
    color: var(--taubenblau);
    white-space: nowrap;
  }

  .status-success {
    border-color: rgba(67, 160, 71, 0.2);
    background: rgba(67, 160, 71, 0.08);
    color: #2e7d32;
  }

  .status-open {
    border-color: rgba(255, 152, 0, 0.2);
    background: rgba(255, 152, 0, 0.08);
    color: #c77800;
  }

  .voucher-amount {
    margin: 0;
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--taubenblau);
  }

  .voucher-meta {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.4rem 1rem;
    margin: 0;
  }

  .voucher-meta dt {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: rgba(0, 32, 73, 0.65);
  }

  .voucher-meta dd {
    margin: 0;
    font-weight: 700;
    color: var(--taubenblau);
  }

  .loading-text,
  .error,
  .empty {
    margin: 0;
  }

  .error {
    color: #b00020;
  }

  @media (max-width: 720px) {
    .list-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
