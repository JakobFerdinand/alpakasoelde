---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
                <meta name="viewport" content="width=device-width, initial-scale=1" />
                <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
                <meta name="generator" content={Astro.generator} />
                <title>{title} | Alpakasölde</title>
                <link rel="canonical" href="https://alpakasoelde.at" />
		
		<!-- SEO Meta Tags -->
                <meta name="description" content="Kleine Alpakahof in Frauenstein, Oberösterreich. Alpakaerlebnisse und Wanderungen." />
                <meta name="keywords" content="Alpakas, Alpakahof, Frauenstein, Österreich, Tiererlebnisse" />
                <meta name="author" content="Alpakasölde" />
		
                <!-- Open Graph / Social Media -->
                <meta property="og:type" content="website" />
                <meta property="og:title" content={`${title} | Alpakasölde`} />
                <meta property="og:description" content="Kleine Alpakahof in Frauenstein, Oberösterreich. Alpakaerlebnisse und Wanderungen." />
                <meta property="og:image" content="/Alpakasoelde.svg" />
                <meta property="og:site_name" content="Alpakasölde" />

                <!-- Twitter Cards -->
                <meta name="twitter:card" content="summary_large_image" />
                <meta name="twitter:title" content={`${title} | Alpakasölde`} />
                <meta name="twitter:description" content="Kleine Alpakahof in Frauenstein, Oberösterreich. Alpakaerlebnisse und Wanderungen." />
                <meta name="twitter:image" content="/Alpakasoelde.svg" />
		
		<!-- Structured Data -->
                <script type="application/ld+json">
                        {
                                "@context": "https://schema.org",
                                "@type": "LocalBusiness",
                                "name": "Alpakasölde",
                                "description": "Kleine Alpakahof in Frauenstein, Oberösterreich",
                                "image": "/favicon.svg",
                                "address": {
                                        "@type": "PostalAddress",
                                        "addressCountry": "AT",
                                        "addressRegion": "Oberösterreich"
                                },
                                "areaServed": "Oberösterreich",
                                "serviceType": ["Alpakawanderungen", "Tiererlebnisse"],
                                "priceRange": "€€"
                        }
		</script>
	</head>
        <body>
                <Navbar />
                <slot />
        </body>
</html>

<style>
        html,
        body {
                margin: 0;
                width: 100%;
        }
</style>

