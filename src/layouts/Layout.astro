---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
                <title>{title} | Alpakasölde</title>
		
		<!-- SEO Meta Tags -->
                <meta name="description" content="Kleine Alpakafarm in Höhnhart, Oberösterreich. Alpakaerlebnisse und Wanderungen." />
                <meta name="keywords" content="Alpakas, Alpakafarm, Höhnhart, Österreich, Tiererlebnisse" />
                <meta name="author" content="Alpakasölde" />
		
		<!-- Open Graph / Social Media -->
		<meta property="og:type" content="website" />
                <meta property="og:title" content={`${title} | Alpakasölde`} />
                <meta property="og:description" content="Kleine Alpakafarm in Höhnhart, Oberösterreich. Alpakaerlebnisse und Wanderungen." />
                <meta property="og:site_name" content="Alpakasölde" />
		
		<!-- Structured Data -->
                <script type="application/ld+json">
                        {
                                "@context": "https://schema.org",
                                "@type": "LocalBusiness",
                                "name": "Alpakasölde",
                                "description": "Kleine Alpakafarm in Höhnhart, Oberösterreich",
                                "image": "/favicon.svg",
                                "address": {
                                        "@type": "PostalAddress",
                                        "addressCountry": "AT",
                                        "addressRegion": "Oberösterreich"
                                },
                                "areaServed": "Oberösterreich",
                                "serviceType": ["Alpakawanderungen", "Tiererlebnisse"],
                                "priceRange": "€€"
                        }
		</script>
	</head>
        <body class="font-sans bg-[var(--vanilla-cream)] text-[var(--slate-river)]">
                <slot />
        </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

